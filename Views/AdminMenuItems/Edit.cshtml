@model EasyDine.Web.ViewModels.Admin.MenuItemEditVm
@{
    ViewData["Title"] = "Edit Menu Item";
}

<h1 class="section-title">Edit Menu Item</h1>

<form asp-action="Edit" method="post" class="card">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
    </div>

    <div>
        <label asp-for="Category"></label>
        <input asp-for="Category" />
    </div>

    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" />
    </div>

    <div>
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" />
    </div>

    <button type="submit" class="btn">Save</button>
    <a asp-action="Index">Cancel</a>
</form>