@model EasyDine.Web.ViewModels.Admin.MenuItemEditVm
@{
    ViewData["Title"] = "Create Menu Item";
}

<h1 class="section-title">Create Menu Item</h1>

<form asp-action="Create" method="post" class="card">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label asp-for="Category"></label>
        <input asp-for="Category" />
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" />
    </div>
    <div>
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" />
    </div>
    <div>
        <label asp-for="PopularityThreshold"></label>
        <input asp-for="PopularityThreshold" type="number" />
    </div>
    <button type="submit" class="btn">Save</button>
    <a asp-action="Index">Cancel</a>
</form>