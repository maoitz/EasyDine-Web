@model EasyDine.Web.DTOs.Tables.TableResponseDto
@{
    ViewData["Title"] = "Delete Table";
}

<h1 class="section-title">Delete Table</h1>
<div class="card">
    <p>Are you sure you want to delete table <strong>@Model.Number</strong>?</p>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-action="Index" class="btn">Cancel</a>
    </form>
</div>