@model IEnumerable<EasyDine.Web.DTOs.Tables.TableResponseDto>
@{
    ViewData["Title"] = "Tables";
}

<section class="section">
    <div class="container">
        <h1 class="section-title">Manage Tables</h1>
        <a asp-action="Create" class="btn">Add New Table</a>

        <table style="width:100%; margin-top:1rem;">
            <thead>
            <tr>
                <th>Number</th>
                <th>Seats</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Number</td>
                    <td>@t.Seats</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@t.Id" class="btn">Edit</a>
                        <form asp-action="Delete" asp-route-id="@t.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Delete this table?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</section>